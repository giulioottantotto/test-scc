{
  "kind": "Template",
  "apiVersion": "v1",
  "metadata": {
    "name": "aduken",
    "annotations": {
      "openshift.io/display-name": "Aduken Template",
      "description": "Template del giorno prima dell'esame",
      "tags": "enjoy"
    },
    "labels": {
      "app": "aduken"
    }
  },
  "parameters": [
    {
      "name": "APPLICATION_NAME",
      "description": "Nome dell'applicazione fatta prima dell'esame",
      "value": "aduken",
      "from": "[a-zA-Z0-9]",
      "required": true
    },
    {
      "name": "REPO_GIT",
      "description": "The URL of the ADUKEN Git repository.",
      "value": "https://github.com/lucky-sideburn/test-scc.git",
      "required": true
    },
    {
      "name": "GIT_BRANCH",
      "description": "The URL of the ADUKEN Git repository branch.",
      "value": "templates",
      "required": true
    }
  ],
  "objects": [
    {
      "kind": "ImageStream",
      "apiVersion": "v1",
      "metadata": {
        "name": "${APPLICATION_NAME}-img",
        "labels": {
          "app": "${APPLICATION_NAME}"
        }
      }
    },
    {
      "kind": "BuildConfig",
      "apiVersion": "v1",
      "metadata": {
        "name": "${APPLICATION_NAME}",
        "labels": {
          "app": "${APPLICATION_NAME}"
        }
      },
      "spec": {
        "triggers": [
          {
            "type": "ConfigChange"
          },
          {
            "type": "ImageChange"
          }
        ],
        "source": {
          "type": "Git",
          "git": {
            "uri": "${REPO_GIT}",
            "ref": "${GIT_BRANCH}"
          }
        },
        "strategy": {
          "type": "Docker",
          "dockerStrategy": {
            "from": {
              "kind": "DockerImage",
              "name": "ubuntu"
            }
          }
        },
        "output": {
          "to": {
            "kind": "ImageStreamTag",
            "name": "${APPLICATION_NAME}-img:latest"
          },
          "imageLabels": [
            {
              "name": "io.k8s.display-name",
              "value": "Aduken"
            },
            {
              "name": "io.k8s.description",
              "value": "Aduken"
            },
            {
              "name": "io.openshift.s2i.scripts-url",
              "value": "image:///opt/app-root/s2i"
            },
            {
              "name": "io.s2i.scripts-url",
              "value": "image:///opt/app-root/s2i"
            },
            {
              "name": "io.openshift.tags",
              "value": "builder,aduken"
            }
          ]
        }
      }
    },
    {
      "kind": "DeploymentConfig",
      "apiVersion": "v1",
      "metadata": {
        "name": "${APPLICATION_NAME}",
        "labels": {
          "app": "${APPLICATION_NAME}"
        }
      },
      "spec": {
        "template": "aduken",
        "strategy": {
          "type": "Recreate"
        },
        "triggers": [
        {
          "type": "ConfigChange"
        },
        {
          "type": "ImageChange",
            "imageChangeParams": {
              "automatic": true,
              "containerNames": [
                "aduken"
              ],
              "from": {
                "kind": "ImageStreamTag",
                "name": "${APPLICATION_NAME}-img:latest"
              }
            }
          }
        ],
        "replicas": 1,
        "selector": {
          "app": "${APPLICATION_NAME}",
          "deploymentconfig": "${APPLICATION_NAME}"
          }
        }
     }
  ]
}